{% comment %}
  Hero Section - Converted from HeroSection.jsx
{% endcomment %}

<div class="o-blocks o-blocks--40">
  <div class="o-tetris o-tetris--o small-mt">
    <div class="m-media m-media--has-media">
      <div class="m-media__media a-ratio-box a-ratio-box--1:1" data-row-number="1" data-picture-number="1">
        {% if section.settings.hero_image_1 != blank %}
          <a href="{{ section.settings.hero_link_1 | default: collections.all.url }}" class="m-media__media-cta">
            <img
              src="{{ section.settings.hero_image_1 | image_url: width: 1000 }}"
              alt="{{ section.settings.hero_image_1.alt | default: 'Hero image' }}"
              data-sizes="auto"
              loading="eager"
            >
          </a>
        {% endif %}
      </div>
    </div>
    <div class="m-media m-media--has-media o-tetris__second-image">
      <div class="m-media__media a-ratio-box a-ratio-box--1:1" data-row-number="1" data-picture-number="2">
        {% if section.settings.hero_image_2 != blank %}
          <a href="{{ section.settings.hero_link_2 | default: collections.all.url }}" class="m-media__media-cta">
            <img
              src="{{ section.settings.hero_image_2 | image_url: width: 1000 }}"
              alt="{{ section.settings.hero_image_2.alt | default: 'Hero image' }}"
              data-sizes="auto"
              loading="lazy"
            >
          </a>
        {% endif %}
      </div>
    </div>
  </div>
  
  <div class="a-rich-text a-rich-text--main title-and-link-and-desc">
    <h1 class="f-display--02 f-display--bold">
      {{ section.settings.headline | default: 'NEW COLLECTION "PRINTEMPS 2026"' }}
    </h1>
    <div class="a-rich-text__button">
      <a href="{{ section.settings.button_link | default: collections.all.url }}" class="a-btn a-btn--outline">
        {{ section.settings.button_text | default: 'DISCOVER OUR NEW COLLECTION' }}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image_1",
      "label": "Hero Image 1"
    },
    {
      "type": "url",
      "id": "hero_link_1",
      "label": "Hero Link 1"
    },
    {
      "type": "image_picker",
      "id": "hero_image_2",
      "label": "Hero Image 2"
    },
    {
      "type": "url",
      "id": "hero_link_2",
      "label": "Hero Link 2"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "NEW COLLECTION \"PRINTEMPS 2026\""
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "DISCOVER OUR NEW COLLECTION"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
