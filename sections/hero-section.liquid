{% comment %}
  Hero Section - Converted from HeroSection.jsx
{% endcomment %}

<div class="o-blocks o-blocks--hero">
  <div class="a-rich-text a-rich-text--main title-and-link-and-desc">
    <h1 class="f-display--02 f-display--bold">
      {{ section.settings.headline | default: 'NEW COLLECTION "Archive Studio"' }}
    </h1>
    {% if section.settings.subtext != blank %}
      <p class="o-hero__subtext f-body">
        {{ section.settings.subtext }}
      </p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image_1",
      "label": "Hero Image 1"
    },
    {
      "type": "url",
      "id": "hero_link_1",
      "label": "Hero Link 1"
    },
    {
      "type": "image_picker",
      "id": "hero_image_2",
      "label": "Hero Image 2"
    },
    {
      "type": "url",
      "id": "hero_link_2",
      "label": "Hero Link 2"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "NEW COLLECTION \"Archive Studio\""
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Items below are handpainted in our studio in small batches to ensure quality and delicacy of craftmanship"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "DISCOVER OUR NEW COLLECTION"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
