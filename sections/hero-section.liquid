{% comment %}
  Hero Section - Slideshow with crossfade + headline + category menu
{% endcomment %}

<div class="o-blocks o-blocks--40">
  {% comment %} Hero Slideshow {% endcomment %}
  <div class="o-hero-slideshow small-mt" data-hero-slideshow data-slide-duration="{{ section.settings.slide_duration | default: 4 }}">
    {% for block in section.blocks %}
      {% if block.type == 'slide' and block.settings.image != blank %}
        <div class="o-hero-slideshow__slide {% if forloop.first %}o-hero-slideshow__slide--active{% endif %}" data-hero-slide>
          <a href="{{ block.settings.link | default: collections.all.url }}" class="o-hero-slideshow__link">
            <img
              src="{{ block.settings.image | image_url: width: 1200 }}"
              alt="{{ block.settings.image.alt | default: 'Hero image' }}"
              loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
            >
          </a>
        </div>
      {% endif %}
    {% endfor %}

    {% comment %} Fallback: use legacy settings if no blocks added yet {% endcomment %}
    {% if section.blocks.size == 0 %}
      {% if section.settings.hero_image_1 != blank %}
        <div class="o-hero-slideshow__slide o-hero-slideshow__slide--active" data-hero-slide>
          <a href="{{ section.settings.hero_link_1 | default: collections.all.url }}" class="o-hero-slideshow__link">
            <img
              src="{{ section.settings.hero_image_1 | image_url: width: 1200 }}"
              alt="{{ section.settings.hero_image_1.alt | default: 'Hero image' }}"
              loading="eager"
            >
          </a>
        </div>
      {% endif %}
      {% if section.settings.hero_image_2 != blank %}
        <div class="o-hero-slideshow__slide" data-hero-slide>
          <a href="{{ section.settings.hero_link_2 | default: collections.all.url }}" class="o-hero-slideshow__link">
            <img
              src="{{ section.settings.hero_image_2 | image_url: width: 1200 }}"
              alt="{{ section.settings.hero_image_2.alt | default: 'Hero image' }}"
              loading="lazy"
            >
          </a>
        </div>
      {% endif %}
    {% endif %}
  </div>
  
  <div class="a-rich-text a-rich-text--main title-and-link-and-desc">
    <h1 class="f-display--02 f-display--bold o-hero__headline--desktop-only">
      {{ section.settings.headline | default: 'NEW COLLECTION "Archive Studio"' }}
    </h1>
    {% if section.settings.subtext != blank %}
      <p class="o-hero__subtext f-body">
        {{ section.settings.subtext }}
      </p>
    {% endif %}
    {% comment %} Desktop: button. Mobile: category menu (TOPS, BOTTOMS, 1 OF 1) {% endcomment %}
    <div class="a-rich-text__button o-hero__button--desktop-only">
      <a href="{{ section.settings.button_link | default: collections.all.url }}" class="a-btn a-btn--outline">
        {{ section.settings.button_text | default: 'DISCOVER OUR NEW COLLECTION' }}
      </a>
    </div>
    <div class="o-hero__free-shipping">
      <p class="o-hero__free-shipping-text">FREE SHIPPING ON ALL ORDERS FOR NEXT <span data-shipping-countdown></span></p>
    </div>
    <div class="o-hero__category-menu--mobile-only">
      <div class="o-category-slider" data-behavior="categorySlider">
        <div class="o-category-slider__container">
          <ul class="o-category-slider__list">
            <li class="o-category-slider__item">
              <a href="#" class="o-category-slider__link o-category-slider__link--active" data-category-filter data-collection="all" data-collection-title="All">
                <span class="o-category-slider__text">ALL</span>
              </a>
            </li>
            <li class="o-category-slider__item">
              <a href="#" class="o-category-slider__link" data-category-filter data-collection="tops" data-collection-title="Tops">
                <span class="o-category-slider__text">TOPS</span>
              </a>
            </li>
            <li class="o-category-slider__item">
              <a href="#" class="o-category-slider__link" data-category-filter data-collection="bottoms" data-collection-title="Bottoms">
                <span class="o-category-slider__text">BOTTOMS</span>
              </a>
            </li>
            <li class="o-category-slider__item">
              <a href="#" class="o-category-slider__link" data-category-filter data-collection="1-of-1s" data-collection-title="1 of 1 Pieces">
                <span class="o-category-slider__text">1 OF 1 PIECES</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image_1",
      "label": "Hero Image 1 (Legacy)"
    },
    {
      "type": "url",
      "id": "hero_link_1",
      "label": "Hero Link 1 (Legacy)"
    },
    {
      "type": "image_picker",
      "id": "hero_image_2",
      "label": "Hero Image 2 (Legacy)"
    },
    {
      "type": "url",
      "id": "hero_link_2",
      "label": "Hero Link 2 (Legacy)"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "NEW COLLECTION \"Archive Studio\""
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Items below are handpainted in our studio in small batches to ensure quality and delicacy of craftmanship"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "DISCOVER OUR NEW COLLECTION"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "range",
      "id": "slide_duration",
      "label": "Seconds per slide",
      "min": 2,
      "max": 10,
      "step": 1,
      "default": 4
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Slide Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
